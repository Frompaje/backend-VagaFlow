generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  password String
  email    String @unique

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt() @map("updated_at")

  UserJob UserJob[]

  @@map("Users")
}

model UserJob {
  id String @id @default(uuid())

  jobs  Job    @relation(fields: [jobId], references: [id])
  jobId String

  users  User   @relation(fields: [userId], references: [id])
  userId String
}

model Job {
  id String @id @default(uuid())

  recruiterName        String @map("recruiter_name")
  position             String
  company              String
  message              String
  companyLink          String @map("company_link")
  vacancyLink          String @map("vacancy_link")
  recruiterProfileLink String @map("recruiter_profile_link")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt() @map("updated_at")

  UserJob UserJob[]

  @@map("Jobs")
}
